{
  "name": "staff-readme",
  "version": "1.0.0",
  "description": "A reuseable GitHub workflows for updating Zhycorp staff list continuously",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && npm run compile",
    "compile": "esbuild src/index.ts --bundle --outdir=dist --target=node16 --platform=node --format=cjs",
    "compile:watch": "npm run compile -- --watch",
    "lint": "eslint . --ignore-path .gitignore --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "start": "node dist",
    "start:dev": "npm run compile && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhycorp/staff-readme.git"
  },
  "keywords": [
    "js",
    "typescript"
  ],
  "author": "Zhycorp <contact@zhycorp.org>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/zhycorp/staff-readme/issues"
  },
  "homepage": "https://zhycorp.org/",
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "eslintConfig": {
    "extends": "@hazmi35/eslint-config/typescript",
    "ignorePatterns": "dist/*"
  },
  "devDependencies": {
    "@hazmi35/eslint-config": "^8.3.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "esbuild": "^0.14.42",
    "eslint": "^8.16.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@actions/core": "^1.8.2",
    "actions-toolkit": "^6.0.1",
    "undici": "^5.3.0"
  }
}
